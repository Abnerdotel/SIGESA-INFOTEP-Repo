
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>SIGESA - Net8</title>
    <link href="~/css/styles.css" rel="stylesheet" />
    @RenderSection("Estilos", required: false)
    <script src="~/lib/fontawesome/all.js"></script>
</head>
<body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <!-- Navbar Brand-->
        <a class="navbar-brand ps-3" href="#">SIGESA</a>
        <!-- Sidebar Toggle-->
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>
        <!-- Navbar Search-->
        <form class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0">
            @*  <div class="input-group">
            <input class="form-control" type="text" placeholder="Search for..." aria-label="Search for..." aria-describedby="btnNavbarSearch" />
            <button class="btn btn-primary" id="btnNavbarSearch" type="button"><i class="fas fa-search"></i></button>
            </div> *@
        </form>
        <!-- Navbar-->
        @await Component.InvokeAsync("MenuUsuario")
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">

                        @* ADMINISTRADOR *@

                        @if (User.IsInRole("Administrador"))
                        {
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                                Dashboard
                            </a>
                        }
                        @if (User.IsInRole("Administrador"))
                        {
                           
                            <div class="sb-sidenav-menu-heading">Gestión</div>

                            <a class="nav-link" asp-controller="Usuario" asp-action="Index">
                                <div class="sb-nav-link-icon"><i class="fas fa-users"></i></div> Usuarios
                            </a>
                            <a class="nav-link" asp-controller="Espacio" asp-action="Index">
                                <div class="sb-nav-link-icon"><i class="fas fa-door-open"></i></div> Espacios
                            </a>
                            <a class="nav-link" asp-controller="Equipamiento" asp-action="Index">
                                <div class="sb-nav-link-icon"><i class="fas fa-tools"></i></div> Equipamiento
                            </a>
                            <a class="nav-link" asp-controller="Bitacora" asp-action="Index">
                                <div class="sb-nav-link-icon"><i class="fas fa-file-alt"></i></div> Bitácora
                            </a>
                            <a class="nav-link" asp-controller="Reporte" asp-action="Index">
                                <div class="sb-nav-link-icon"><i class="fas fa-file-export"></i></div> Reportes
                            </a>
                        }

                        @* COORDINADOR *@
                        @if (User.IsInRole("Coordinador"))
                        {
                            <div class="sb-sidenav-menu-heading">Coordinación</div>

                            <a class="nav-link" asp-controller="Calendario" asp-action="Index">
                                <div class="sb-nav-link-icon"><i class="fas fa-calendar-alt"></i></div> Mi Calendario
                            </a>
                            <a class="nav-link" asp-controller="Aulas" asp-action="Asignadas">
                                <div class="sb-nav-link-icon"><i class="fas fa-school"></i></div> Aulas Asignadas
                            </a>
                            <a class="nav-link" asp-controller="Salones" asp-action="Asignados">
                                <div class="sb-nav-link-icon"><i class="fas fa-door-open"></i></div> Salones Asignados
                            </a>
                            <a class="nav-link" asp-controller="Equipos" asp-action="Index">
                                <div class="sb-nav-link-icon"><i class="fas fa-desktop"></i></div> Equipos
                            </a>
                            <a class="nav-link" asp-controller="Incidencia" asp-action="Index">
                                <div class="sb-nav-link-icon"><i class="fas fa-exclamation-triangle"></i></div> Incidencias
                            </a>
                        }

                        @* USUARIO FINAL *@
                        @if (User.IsInRole("Usuario"))
                        {
                            <div class="sb-sidenav-menu-heading">Reservas</div>

                            <a class="nav-link" asp-controller="Reserva" asp-action="Nueva">
                                <div class="sb-nav-link-icon"><i class="fas fa-calendar-plus"></i></div> Reservar Espacio
                            </a>
                            <a class="nav-link" asp-controller="Reserva" asp-action="Historial">
                                <div class="sb-nav-link-icon"><i class="fas fa-history"></i></div> Historial de Reservas
                            </a>
                            <a class="nav-link" asp-controller="Reserva" asp-action="Estado">
                                <div class="sb-nav-link-icon"><i class="fas fa-tasks"></i></div> Estado de Reservas
                            </a>
                            <a class="nav-link" asp-controller="Notificacion" asp-action="Index">
                                <div class="sb-nav-link-icon"><i class="fas fa-bell"></i></div> Notificaciones
                            </a>
                        }

                    </div>
                </div>


                @{
                    var rol = User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value ?? "Sin Rol";
                }
                <div class="sb-sidenav-footer">
                    <div class="small" href="#" >Logueado como: @rol</div>
                    
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    @RenderBody()
                </div>
            </main>
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Abner Dotel 2023-0183</div>
                        <div>
                            <a href="#">Privacy Policy</a>
                            &middot;
                            <a href="#">Terms &amp; Conditions</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/scripts.js"></script>
    <script src="~/lib/sweetalert2/js/sweetalert2.js"></script>
    <script src="~/lib/loadingoverlay/loadingoverlay.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
