@using SigesaWeb.Models.DTOs

@{
    ViewData["Title"] = "Gestión de Equipamiento";
}

@section Estilos {
    <link href="~/lib/datatables2/css/datatables.datatables.css" rel="stylesheet" />
    <link href="~/lib/select2/css/select2.min.css" rel="stylesheet" />
    <link href="~/lib/select2/css/select2-bootstrap-5-theme.min.css" rel="stylesheet" />
}

@await Html.PartialAsync("_EncabezadoModulo", "Gestión de Equipamiento")

<div class="mb-3">
    @await Html.PartialAsync("_BotonAccion", new BotonAccionDTO
{
    Texto = "Nuevo Equipamiento",
    Icono = "fas fa-toolbox",
    Clase = "btn-warning",
    TargetModalId = "modalEquipamiento"
})
</div>

<div class="table-responsive">
    <table id="tablaEquipamiento" class="table table-bordered w-100">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Fecha de Creación</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

<!-- Modal Equipamiento -->
<div class="modal fade" id="modalEquipamiento" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <form id="formEquipo">
            <div class="modal-content">
                <div class="modal-header bg-warning text-dark">
                    <h5 class="modal-title">Equipamiento</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="idEquipo">
                    <div class="mb-3">
                        <label class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="nombreEquipo" required autocomplete="off" placeholder="Ej: Monitor, Teclado..."  />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Descripción</label>
                        <textarea class="form-control" id="descripcionEquipo" rows="3"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-warning" id="btnGuardarEquipo">Guardar</button>
                </div>
            </div>
        </form>
    </div>
</div>

@await Html.PartialAsync("_ModalConfirmacion", new ModalConfirmacionDTO
{
    IdModal = "modalEliminarEquipo",
    Titulo = "Eliminar Equipamiento",
    Mensaje = "¿Estás seguro de que deseas eliminar este equipamiento?",
    IdBotonConfirmar = "btnEliminarEquipamiento"
})

@section Scripts {
    <script src="~/lib/datatables2/js/moment.min.js"></script>
    <script src="~/lib/datatables2/js/datatables.js"></script>
    <script src="~/lib/select2/js/select2.min.js"></script>
    <script src ="~/Views/Admin/equipamiento.js"></script>
}
