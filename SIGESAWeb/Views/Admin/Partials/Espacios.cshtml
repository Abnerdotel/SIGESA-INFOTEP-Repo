@using SigesaWeb.Models.DTOs

@{
    ViewData["Title"] = "Gestión de Espacios";
}
@await Html.PartialAsync("_EncabezadoModulo", "Gestión de Espacios")

<div class="mb-3">
    @await Html.PartialAsync("_BotonAccion", new BotonAccionDTO
{
    Texto = "Nuevo Espacio",
    Icono = "fas fa-plus",
    Clase = "btn-success",
    TargetModalId = "modalEspacio"
})
</div>

<div id="contenedorTablaEspacios">
    <!-- Tabla dinámicamente cargada -->
</div>

@await Html.PartialAsync("_ModalConfirmacion", new ModalConfirmacionDTO
{
    IdModal = "modalEliminarEspacio",
    Titulo = "Eliminar Espacio",
    Mensaje = "¿Deseas eliminar este espacio?",
    IdBotonConfirmar = "btnEliminarEspacio"
})

@section Scripts {
    <script src="~/Views/admin/espacios.js"></script>
}
