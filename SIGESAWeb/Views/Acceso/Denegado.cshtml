
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Error 401 - Acceso no autorizado</title>
    <link href="~/css/styles.css" rel="stylesheet" />
    <script src="~/lib/fontawesome/all.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="d-flex align-items-center" style="background: linear-gradient(to right, #e74c3c, #c0392b); min-height: 100vh;">
    <div class="container text-center text-white">
        <h1 class="display-1">401</h1>
        <p class="lead">Acceso no autorizado</p>
        <p class="mb-4">No tienes permisos para acceder a esta página.</p>

        @if (User.IsInRole("Administrador"))
        {
                <a asp-controller="Home" asp-action="Index" class="btn btn-light">Ir al Dashboard</a>
        }
        else if (User.IsInRole("Usuario"))
        {
                <a asp-controller="Home" asp-action="Index" class="btn btn-light">Volver a Aulas</a>
        }
        else if (User.IsInRole("Coordinador"))
        {
                <a asp-controller="Home" asp-action="Index" class="btn btn-light">Aulas Asignadas</a>
        }
    </div>
</body>
</html>