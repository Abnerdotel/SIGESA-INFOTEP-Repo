
@model SigesaWeb.Models.DTOS.VMUsuario
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Registrarse - SIGESA</title>
    <link href="~/css/styles.css" rel="stylesheet" />
    <script src="~/lib/fontawesome/all.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-gradient" style="background: linear-gradient(to right, #1abc9c, #16a085); min-height: 100vh; display: flex; align-items: center;">

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-lg rounded-4">
                    <div class="card-header text-center bg-white">
                        <img src="~/img/infotep-logo.png" alt="INFOTEP Logo" width="150" class="mb-3" />
                        <h3 class="fw-light">Crear Cuenta</h3>
                    </div>
                    <div class="card-body">
                        @if (ViewBag.Creado == null)
                        {
                            <form asp-controller="Acceso" asp-action="Registrarse" method="post">
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input class="form-control" asp-for="DocumentoIdentidad" />
                                            <label for="DocumentoIdentidad">Documento de Identidad</label>
                                            <span asp-validation-for="DocumentoIdentidad" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input class="form-control" asp-for="Nombre" />
                                            <label for="Nombre">Nombre</label>
                                            <span asp-validation-for="Nombre" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input class="form-control" asp-for="Apellido" />
                                            <label for="Apellido">Apellido</label>
                                            <span asp-validation-for="Apellido" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input class="form-control" asp-for="Correo" />
                                            <label for="Correo">Correo</label>
                                            <span asp-validation-for="Correo" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input type="password" class="form-control" asp-for="Clave" />
                                            <label for="Clave">Contraseña</label>
                                            <span asp-validation-for="Clave" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input type="password" class="form-control" asp-for="ConfirmarClave" />
                                            <label for="ConfirmarClave">Confirmar Contraseña</label>
                                            <span asp-validation-for="Clave" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                @if (ViewBag.Mensaje != null)
                                {
                                    <div class="alert alert-danger">@ViewBag.Mensaje</div>
                                }
                                <div class="d-grid">
                                    <button class="btn btn-success rounded-pill">Crear Cuenta</button>
                                </div>
                            </form>
                        }
                        else
                        {
                            <div class="alert alert-success">@ViewBag.Mensaje</div>
                        }
                    </div>
                    <div class="card-footer text-center">
                        <a asp-controller="Acceso" asp-action="Login">¿Ya tienes una cuenta? Accede aquí</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>