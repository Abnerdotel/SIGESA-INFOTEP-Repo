@model SigesaWeb.Models.DTOs.VMUsuarioLogin
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Iniciar Sesión - SIGESA</title>
    <link href="~/css/styles.css" rel="stylesheet" />
    <script src="~/lib/fontawesome/all.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-gradient" style="background: linear-gradient(to right, #1abc9c, #16a085); min-height: 100vh; display: flex; align-items: center;">

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg rounded-4">
                    <div class="card-header text-center bg-white">
                        <img src="~/img/infotep-logo.png" alt="INFOTEP Logo" width="150" class="mb-3" />
                        <h3 class="fw-light">Bienvenido a SIGESA</h3>
                    </div>
                    <div class="card-body">

                        <form asp-controller="Acceso" asp-action="Login" method="post">
                            <!-- Correo -->
                            <div class="form-floating mb-3">
                                <input asp-for="Correo" class="form-control" placeholder="Correo electrónico" required />
                                <label asp-for="Correo">Correo Electrónico</label>
                                <span asp-validation-for="Correo" class="text-danger"></span>
                            </div>

                            <!-- Contraseña -->
                            <div class="form-floating mb-3">
                                <input asp-for="Clave" type="password" class="form-control" placeholder="Contraseña" required />
                                <label asp-for="Clave">Contraseña</label>
                                <span asp-validation-for="Clave" class="text-danger"></span>
                            </div>

                            <!-- Error -->
                            @if (ViewData["Mensaje"] != null)
                            {
                                <div class="alert alert-danger">@ViewData["Mensaje"]</div>
                            }

                            <!-- Botón -->
                            <div class="d-grid">
                                <button class="btn btn-success rounded-pill" type="submit">Acceder</button>
                            </div>
                        </form>

                    </div>
                    <div class="card-footer text-center">
                        <a asp-controller="Acceso" asp-action="Registrarse">¿No tienes cuenta? Regístrate</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
